<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_ConstraintLayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.android_customchart_example.BarChart
        android:id="@+id/activity_main_barchart_chart"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@color/teal_200"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.android_customchart_example.LineChart
        android:id="@+id/activity_main_linechart_chart"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@color/purple_200"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_button_test_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chart_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activity_main_button_test_2"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_barchart_chart" />

    <Button
        android:id="@+id/activity_main_button_test_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chart_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/activity_main_button_test_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_barchart_chart" />
</androidx.constraintlayout.widget.ConstraintLayout>